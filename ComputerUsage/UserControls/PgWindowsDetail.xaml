<Page x:Class="ComputerUsage.PgNetworkDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        xmlns:flat="clr-namespace:WpfControls.FlatStyle;assembly=WpfControls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerUsage"
        mc:Ignorable="d"
        Title="WinProcessesDetail" >
    <Grid>
        <flat:ListView x:Name="lvw" HorizontalContentAlignment="Center">
            <flat:ListView.View>
                <GridView >
                    <GridView.Columns>
                        <GridViewColumn Header="地址" DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn Header="结果" DisplayMemberBinding="{Binding DisplayResult}"/>
                        <GridViewColumn Header="时间" DisplayMemberBinding="{Binding DisplayTime}"/>

                    </GridView.Columns>
                </GridView>
            </flat:ListView.View>
        </flat:ListView>

    </Grid>

</Page>
