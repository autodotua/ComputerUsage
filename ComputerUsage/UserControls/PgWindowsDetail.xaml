<Page x:Class="ComputerUsage.PgWindowsDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        xmlns:flat="clr-namespace:WpfControls.FlatStyle;assembly=WpfControls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerUsage"
        mc:Ignorable="d"
        Title="WinProcessesDetail" >
    <Grid>
        <flat:ListView x:Name="lvw" HorizontalContentAlignment="Center">
            <flat:ListView.View>
                <GridView >
                    <GridViewColumn Header="句柄"  DisplayMemberBinding="{Binding DisplayHandle}"/>
                    <GridViewColumn Header="名称"  DisplayMemberBinding="{Binding DisplayName}"/>
                    <GridViewColumn Header="类名"  DisplayMemberBinding="{Binding DisplayClassName}"/>
                </GridView>
            </flat:ListView.View>
        </flat:ListView>

    </Grid>

</Page>
